<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="static_block_script" resource="default" engine="innodb" comment="Static Block FAQ Scripts">
        <column xsi:type="int" name="id" padding="10" unsigned="true" identity="true" nullable="false" comment="Id"/>
        <column xsi:type="varchar" name="identifier" nullable="false" comment="Identifier"/>
        <column xsi:type="text" name="script" nullable="false" comment="Script"/>               
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="BLOCK_IDENTIFIER">
       		<column name="identifier"/>
        </constraint>
    </table>

</schema>
