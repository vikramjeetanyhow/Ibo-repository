<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/catalog/products" method="POST">
        <service class="Ibo\Quotation\Api\ProductRepositoryInterface" method="save"/>
        <resources>
            <resource ref="Ibo_Quotation::product"/>
        </resources>
    </route>
    <route url="/V1/catalog/products" method="PUT">
        <service class="Ibo\Quotation\Api\ProductRepositoryInterface" method="update"/>
        <resources>
            <resource ref="Ibo_Quotation::product"/>
        </resources>
    </route>
</routes>
