<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="regional_pricing" translate="label" type="text" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Regional Pricing</label>
            <tab>embitel</tab>
            <resource>Ibo_RegionalPricing::configuration</resource>
            <group id="setting" translate="label tooltip" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <field id="active" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="zones" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Zones</label>
                    <frontend_model>Ibo\RegionalPricing\Block\Adminhtml\Form\Field\Regions</frontend_model>
                    <backend_model>Ibo\RegionalPricing\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                </field>
                <field id="default_zone" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Default Zone</label>
                    <source_model>Ibo\RegionalPricing\Model\Config\Source\Region</source_model>
                </field>
            </group>
            <group id="postcode_setting" translate="label tooltip" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Price Zone API</label>
                <field id="postcode_api_url" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Postcode API URL</label>
                </field>
                <!-- <field id="api_key" translate="label" type="text" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>API Key</label>
                </field>
                <field id="api_value" translate="label" type="text" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>API Value</label>
                </field> -->
            </group>
        </section>
    </system>
</config>
