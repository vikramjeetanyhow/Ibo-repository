<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">supermax_price_reduction_form.price_reduction_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Price Override Data</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="Anyhow\SupermaxPos\Block\Adminhtml\PriceReduction\Edit\SaveAndContinueButton"/>
            <button name="save" class="Anyhow\SupermaxPos\Block\Adminhtml\PriceReduction\Edit\SaveButton"/>
            <button name="reset" class="Anyhow\SupermaxPos\Block\Adminhtml\PriceReduction\Edit\ResetButton"/>
            <button name="delete" class="Anyhow\SupermaxPos\Block\Adminhtml\PriceReduction\Edit\DeleteButton"/>
            <button name="back" class="Anyhow\SupermaxPos\Block\Adminhtml\PriceReduction\Edit\BackButton"/>
        </buttons>
        <namespace>supermax_price_reduction_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>supermax_price_reduction_form.price_reduction_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="price_reduction_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="supermax/pricereduction/save"/>
        </settings>
        <dataProvider class="Anyhow\SupermaxPos\Model\PriceReduction\DataProvider" name="price_reduction_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>pos_price_reduction_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="pos_price_reduction_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PriceReduction</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>pos_price_reduction_id</dataScope>
            </settings>
        </field>
        <field name="status" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PriceReduction</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Status</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="override_type" sortOrder="15">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Anyhow\SupermaxPos\Model\Config\Source\OverrideType</item>
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">PriceReduction</item>
                    <item name="component" xsi:type="string">Anyhow_SupermaxPos/js/form/element/override-type-options</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Override Type</label>
                <dataScope>override_type</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="title" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PriceReduction</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Title</label>
                <dataScope>title</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="max_capacity" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PriceReduction</item>
                    <item name="notice" xsi:type="string" translate="true">Enter maximum price overriding capacity in %.</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Maximum Capacity (in %)</label>
                <dataScope>max_capacity</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-digits" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
