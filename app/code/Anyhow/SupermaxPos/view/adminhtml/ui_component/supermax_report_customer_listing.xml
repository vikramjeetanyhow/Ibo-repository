	<columns name="report_customer_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>entity_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>55</resizeDefaultWidth>
            </settings>
        </selectionsColumn>
        <!-- <column name="entity_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column> -->
        <column name="date_start" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Date Added</label>
            </settings>
        </column>
        <!-- <column name="date_end">
            <settings>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Date End</label>
            </settings>
        </column> -->
        <column name="customer_name" class="Anyhow\SupermaxPos\Ui\Component\Listing\Columns\CustomerName">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Customer Name</label>
            </settings>
        </column>
        <column name="email">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Email</label>
            </settings>
        </column>
        <column name="customer_group_code">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Customer Group</label>
            </settings>
        </column>
        <column name="is_active" class="Anyhow\SupermaxPos\Ui\Component\Listing\Columns\CustomerStatus">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="orders">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">No. Orders</label>
            </settings>
        </column>
        <column name="products">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">No. Products</label>
            </settings>
        </column>
        <column name="total" class="Anyhow\SupermaxPos\Ui\Component\Listing\Columns\SalesTotal">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Total</label>
            </settings>
        </column>
        <column name="customer_id" class="Anyhow\SupermaxPos\Ui\Component\Listing\Columns\CustomerId">
            <settings>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Action</label>
            </settings>
        </column>
    </columns>
</listing>
