        <field name="edc_type" sortOrder="65">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Anyhow\SupermaxPos\Model\Cashier\Attribute\Outlets\AllEdcTypeOptions</item>
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">PosTerminal</item>
                    <item name="component" xsi:type="string">Anyhow_SupermaxPos/js/form/element/device-options</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">EDC Device Type</label>
                <dataScope>edc_type</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="ezetap_app_key" sortOrder="67" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PosTerminal</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Ezetap App Key</label>
                <dataScope>ezetap_app_key</dataScope>
               <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="ezetap_username" sortOrder="70" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PosTerminal</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Ezetap Username</label>
                <dataScope>ezetap_username</dataScope>
               <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="ezetap_device_id" sortOrder="80" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PosTerminal</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Ezetap Device Id</label>
                <dataScope>ezetap_device_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="pinelabs_merchant_pos_code" sortOrder="81" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PosTerminal</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Pinelabs Merchant Pos Code</label>
                <dataScope>pinelabs_merchant_pos_code</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="pinelabs_device_id" sortOrder="85" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PosTerminal</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Pinelabs Device Id</label>
                <dataScope>pinelabs_device_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="pinelabs_allowed_mops" sortOrder="90" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PosTerminal</item>
                    <item name="notice" xsi:type="string" translate="true">Please set "|" separated values.Ex: 1|2|3|etc. Set 0 to enable all MOPs.</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Pinelabs Allowed MOPs</label>
                <dataScope>pinelabs_allowed_mops</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="receipt_thermal_status" sortOrder="130" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Config\Model\Config\Source\Enabledisable</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PosTerminal</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Receipt Thermal</label>
                <dataScope>receipt_thermal_status</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
