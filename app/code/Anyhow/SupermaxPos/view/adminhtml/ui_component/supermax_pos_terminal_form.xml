<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">supermax_pos_terminal_form.pos_terminal_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Price Override Data</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="Anyhow\SupermaxPos\Block\Adminhtml\PosTerminal\Edit\SaveAndContinueButton"/>
            <button name="save" class="Anyhow\SupermaxPos\Block\Adminhtml\PosTerminal\Edit\SaveButton"/>
            <button name="reset" class="Anyhow\SupermaxPos\Block\Adminhtml\PosTerminal\Edit\ResetButton"/>
            <button name="delete" class="Anyhow\SupermaxPos\Block\Adminhtml\PosTerminal\Edit\DeleteButton"/>
            <button name="back" class="Anyhow\SupermaxPos\Block\Adminhtml\PosTerminal\Edit\BackButton"/>
        </buttons>
        <namespace>supermax_pos_terminal_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>supermax_pos_terminal_form.pos_terminal_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="pos_terminal_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="supermax/posterminal/save"/>
        </settings>
        <dataProvider class="Anyhow\SupermaxPos\Model\PosTerminal\DataProvider" name="pos_terminal_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>pos_terminal_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="pos_terminal_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PosTerminal</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>pos_terminal_id</dataScope>
            </settings>
        </field>
        <field name="status" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PosTerminal</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Status</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="pos_outlet_id" sortOrder="15" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Anyhow\SupermaxPos\Model\Cashier\Attribute\Outlets\AllOutletOptions</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PosTerminal</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Assign Store</label>
                <dataScope>pos_outlet_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="code" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PosTerminal</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Terminal Code</label>
                <dataScope>code</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="title" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">PosTerminal</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Terminal Title</label>
                <dataScope>title</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
