<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">supermax_report_sales_summary_listing.supermax_report_sales_summary_listing_data_source</item>
            <item name="deps" xsi:type="string">supermax_report_sales_summary_listing.supermax_report_sales_summary_listing_data_source</item>
        </item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="array">
                <item name="name" xsi:type="string">back</item>
                <item name="label" xsi:type="string" translate="true">Back</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">supermax/report/sales</item>
                <item name="sortOrder" xsi:type="number">10</item>
            </item>
            <item name="export" xsi:type="array">
                <item name="name" xsi:type="string">export</item>
                <item name="label" xsi:type="string" translate="true">Export Sales Summary Report</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">supermax/report/salessummaryexport</item>
                <item name="sortOrder" xsi:type="number">30</item>
            </item>
        </item>
        <item name="spinner" xsi:type="string">report_sales_summary_columns</item>
    </argument>
    <dataSource name="supermax_report_sales_summary_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">supermax_report_sales_summary_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">entity_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>

    <columns name="report_sales_summary_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>entity_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>55</resizeDefaultWidth>
            </settings>
        </selectionsColumn>
        <column name="method" class="Anyhow\SupermaxPos\Ui\Component\Listing\Columns\PaymentName">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Payment Method</label>
            </settings>
        </column>
        <column name="payment_total" class="Anyhow\SupermaxPos\Ui\Component\Listing\Columns\PaymentMethod">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Total</label>
            </settings>
        </column>
    </columns>
</listing>
