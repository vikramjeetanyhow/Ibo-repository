    <columns name="report_sales_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>entity_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>55</resizeDefaultWidth>
            </settings>
        </selectionsColumn>
        <column name="date_start" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Date</label>
           </settings>
        </column>
        <column name="date_end" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <!-- <dateFormat>MMM-dd-YYYY hh:mm:ss A</dateFormat> -->
                <label translate="true">Date</label>
            </settings>
        </column>
        <column name="orders">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">No. Orders</label>
            </settings>
        </column>
        <column name="products">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">No. Products</label>
            </settings>
        </column>
        <column name="tax" class="Anyhow\SupermaxPos\Ui\Component\Listing\Columns\SalesTax">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Tax</label>
            </settings>
        </column>
        <column name="total" >
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <label translate="true">Total</label>
            </settings>
        </column>
        <column name="total_profit_loss" class="Anyhow\SupermaxPos\Ui\Component\Listing\Columns\TotalProfitLoss">
            <settings>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                </editor>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <label translate="true">Total Profit / Loss</label>
            </settings>
        </column>
		<actionsColumn name="actions" class="Anyhow\SupermaxPos\Ui\Component\Listing\Columns\SalesReportActions">
            <settings>
                <indexField>date_start</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
            </settings>
        </actionsColumn>
    </columns>
</listing>
