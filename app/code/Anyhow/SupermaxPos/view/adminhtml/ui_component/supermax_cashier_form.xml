<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">supermax_cashier_form.cashier_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Cashier Data</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="Anyhow\SupermaxPos\Block\Adminhtml\Cashier\Edit\SaveAndContinueButton"/>
            <button name="save" class="Anyhow\SupermaxPos\Block\Adminhtml\Cashier\Edit\SaveButton"/>
            <button name="reset" class="Anyhow\SupermaxPos\Block\Adminhtml\Cashier\Edit\ResetButton"/>
            <button name="delete" class="Anyhow\SupermaxPos\Block\Adminhtml\Cashier\Edit\DeleteButton"/>
            <button name="back" class="Anyhow\SupermaxPos\Block\Adminhtml\Cashier\Edit\BackButton"/>
        </buttons>
        <namespace>supermax_cashier_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>supermax_cashier_form.cashier_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="cashier_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="supermax/cashier/save"/>
        </settings>
        <dataProvider class="Anyhow\SupermaxPos\Model\Cashier\DataProvider" name="cashier_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>pos_user_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="pos_user_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Cashier</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>pos_user_id</dataScope>
            </settings>
        </field>
        <field name="status" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Cashier</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Status</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="pos_user_role_id" sortOrder="20" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Anyhow\SupermaxPos\Model\Cashier\Attribute\AllEnableRoleOptions</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Cashier</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Assign Role</label>
                <dataScope>pos_user_role_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="firstname" sortOrder="45" formElement="input">
            <argument name="data" xsi:type="array">
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">First Name</label>
                <dataScope>firstname</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="lastname" sortOrder="50" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Cashier</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Last Name</label>
                <dataScope>lastname</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="email" sortOrder="60" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Cashier</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Email</label>
                <dataScope>email</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-email" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="phone" sortOrder="63" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Cashier</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Telephone</label>
                <dataScope>phone</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="username" sortOrder="65" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Cashier</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Employee ID</label>
                <dataScope>username</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="password" sortOrder="70" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Cashier</item>
                    <item name="elementTmpl" xsi:type="string">Anyhow_SupermaxPos/form/element/password</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Password</label>
                <dataScope>password</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-admin-password" xsi:type="string">password</rule>
                </validation>
            </settings>
        </field>
        <field name="confirm_password" sortOrder="71" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Cashier</item>
                    <item name="elementTmpl" xsi:type="string">Anyhow_SupermaxPos/form/element/confirmpassword</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Confirm Password</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="equalTo" xsi:type="string">.password1</rule><!-- class of password input field -->
                </validation>
            </settings>
        </field>
        <field name="store_view_id" sortOrder="80" formElement="select">
            <argument name="data" xsi:type="array">
             <item name="options" xsi:type="object">Anyhow\SupermaxPos\Model\Cashier\Attribute\Stores\AllStoresOptions</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Cashier</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Store View</label>
                <dataScope>store_view_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="pos_outlet_id" sortOrder="90" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Anyhow\SupermaxPos\Model\Cashier\Attribute\Outlets\AllOutletOptions</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Cashier</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Assign Store</label>
                <dataScope>pos_outlet_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
