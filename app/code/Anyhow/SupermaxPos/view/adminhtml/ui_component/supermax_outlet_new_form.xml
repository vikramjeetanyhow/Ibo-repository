            <argument name="data" xsi:type="array">
                <!-- <item name="options" xsi:type="object">Anyhow\SupermaxPos\Model\Outlet\Attribute\Address\CustomerAddressOptions</item> -->
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Outlet</item>
                    <item name="component" xsi:type="string">Anyhow_SupermaxPos/js/form/element/options</item>
