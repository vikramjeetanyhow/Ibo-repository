<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">supermax_outlet_new_form.supermax_outlet_new_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Store Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="Anyhow\SupermaxPos\Block\Adminhtml\Outlet\Edit\SaveAndContinueButton"/>
            <button name="save" class="Anyhow\SupermaxPos\Block\Adminhtml\Outlet\Edit\SaveButton"/>
            <button name="reset" class="Anyhow\SupermaxPos\Block\Adminhtml\Outlet\Edit\ResetButton"/>
            <button name="delete" class="Anyhow\SupermaxPos\Block\Adminhtml\Outlet\Edit\DeleteButton"/>
            <button name="back" class="Anyhow\SupermaxPos\Block\Adminhtml\Outlet\Edit\BackButton"/>
        </buttons>
        <namespace>supermax_outlet_new_form</namespace>
        <dataScope>data</dataScope>
        <!-- <layout>
            <navContainerName>left</navContainerName>
            <type>tabs</type>
        </layout> -->
        <deps>
            <dep>supermax_outlet_new_form.supermax_outlet_new_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="supermax_outlet_new_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="supermax/outlet/save"/>
        </settings>
        <dataProvider class="Anyhow\SupermaxPos\Model\Outlet\DataProvider" name="supermax_outlet_new_form_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>pos_outlet_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
        <label/>
            <!-- <label translate="true">Outlet Information</label> -->
        </settings>
        <field name="pos_outlet_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Outlet</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>pos_outlet_id</dataScope>
            </settings>
        </field>
        <field name="status" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Outlet</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <!-- <dataType>boolean</dataType> -->
                <label translate="true">Status</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="store_id" sortOrder="15" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Outlet</item>
                    <item name="disabled" xsi:type="boolean">false</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Store Id</label>
                <dataScope>store_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="outlet_name" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Outlet</item>
                    <item name="disabled" xsi:type="boolean">false</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Store Name</label>
                <dataScope>outlet_name</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="email" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
