            <settings>
                <dataType>text</dataType>
                <label translate="true">Email</label>
                <dataScope>email</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="inventory_node" sortOrder="22" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Outlet</item>
                    <item name="disabled" xsi:type="boolean">false</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Inventory Node</label>
                <dataScope>inventory_node</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="store_wh_node" sortOrder="25" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Outlet</item>
                    <item name="disabled" xsi:type="boolean">false</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Store WH Node</label>
                <dataScope>store_wh_node</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="allowed_ips" sortOrder="26" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Outlet</item>
                    <item name="disabled" xsi:type="boolean">false</item>
                    <item name="notice" xsi:type="string" translate="true">Enter multiple IPs separated with “,” or “;” or “/” for which supermax POS terminal will work.</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">POS IP address</label>
                <dataScope>allowed_ips</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="source_code" sortOrder="30" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Anyhow\SupermaxPos\Model\Outlet\Attribute\Source\SourceOptions</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Outlet</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Source</label>
                <dataScope>source_code</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="pos_receipt_id" sortOrder="35" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Anyhow\SupermaxPos\Model\Outlet\Attribute\ReceiptOptions</item>
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Outlet</item>
                </item>
            </argument>
            <settings>
