<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="embitel_mobile_otp" resource="default" engine="innodb" comment="Customer Mobile Otp Data">        
        <column xsi:type="int" name="mobile_id" unsigned="true" nullable="false" identity="true" comment="Mobile Id"/> 
        <column xsi:type="varchar" name="customer_mobile_number" nullable="true" default="NULL" length="15" comment="Mobile Number"/>
        <column xsi:type="int" name="otp" nullable="true" comment="OTP"/>
        <column xsi:type="timestamp" name="created_date_time" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Created At"/>
        <column xsi:type="timestamp" name="expire_date_time" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Expire At"/>
        <column xsi:type="int" name="verification_flag" unsigned="true" nullable="true" identity="false" comment="Flag 1,2,3,4"/>
        <column xsi:type="int" name="verification_status" default="1" unsigned="true" nullable="false" identity="false" comment="Once verified make it 0"/>
        <column xsi:type="tinyint" name="resend_count" nullable="false" default="0" comment="Resend count"/>
        <column xsi:type="timestamp" name="last_resend" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Last Resend"/>        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="mobile_id"/>
        </constraint>
        <index referenceId="EMBITEL_SMS_OTP_MOBILE_ID" indexType="btree">
            <column name="mobile_id"/>
        </index>
        <index referenceId="EMBITEL_SMS_OTP_CUSTOMER_MOBILE_NUMBER" indexType="btree">
            <column name="customer_mobile_number"/>
        </index>
        <index referenceId="EMBITEL_SMS_OTP_VERIFICATION_FLAG" indexType="btree">
            <column name="verification_flag"/>
        </index>
        <index referenceId="EMBITEL_SMS_OTP_VERIFICATION_STATUS" indexType="btree">
            <column name="verification_status"/>
        </index>         
    </table>
</schema>
