<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/ebocategories" method="GET">
        <service class="Embitel\Catalog\Api\CategoryManagementInterface" method="getTree" />
        <resources>
            <resource ref="Magento_Catalog::categories" />
        </resources>
    </route>
    <route url="/V1/products/fetch-bom-offerId-metadata" method="POST">
        <service class="Embitel\Catalog\Api\BomOfferIdInterface" method="getList"/>
        <resources>
            <resource ref="Magento_Catalog::products"/>
        </resources>
    </route>
    <route url="/V1/sync/merchandising-categories-api" method="POST">
        <service class="Embitel\Catalog\Api\CategoryManagementInterface" method="getMerchandiseCategoriesIds"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/ibo-cart/fetch" method="POST">
        <service class="Embitel\Catalog\Api\IboCartInterface" method="fetchCart"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route> 
    <route url="/V1/push/brandservice" method="POST">
        <service class="Embitel\Catalog\Api\CategoryManagementInterface" method="getBrandCategoryPushApi"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>     
</routes>